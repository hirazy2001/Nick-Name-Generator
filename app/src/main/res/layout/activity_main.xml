<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head_main"
        android:background="#5BAFD5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_appname"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_name_app"
            />
        <ImageView
            android:id="@+id/img_option"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/options"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ic_moreapps"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_toLeftOf="@+id/img_option"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/surprise"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_content_main"
        android:layout_below="@+id/layout_head_main"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <Spinner
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/spinner1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:entries="@array/spiner_1"
                />
            <Spinner
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/spinner2"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:entries="@array/spiner_2"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="5.5"
                android:layout_width="0dp"
                android:background="@drawable/bg_img"
                android:layout_height="match_parent">
                <EditText
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:id="@+id/edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:background="@null"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="#ff0"
                    android:hint="Nick Name"
                    android:layout_weight="5.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <Spinner
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:entries="@array/spiner_4"
                android:id="@+id/spinner3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/changetext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:id="@+id/ic_change"
                    android:src="@mipmap/ic_reload"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/status"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Random"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                >
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/sc_copy"
                    android:background="@drawable/bg_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copied and Saved: "
                        />
                    <TextView
                        android:id="@+id/listsize"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:text="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/layout_content_main"
        android:id="@+id/recyclerview"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/rlAds1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
