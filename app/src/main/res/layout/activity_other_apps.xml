<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OtherAppsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/head"
        android:background="#F1F1EC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ads" />

        <ImageView
            android:id="@+id/back"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_close_splash" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewotherapps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="7dp"
        android:background="#EEEEE8"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEE8"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/baseline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_info_24"
            />
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/baseline1"
            android:layout_centerVertical="true"
            android:id="@+id/textad"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="Ads by LE ANH TRUNG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>